<script type="text/javascript">
function validateForm()
 {
	
	var email			= 		document.getElementById('email');
	var permission  	= 		document.getElementById('permission');
	var fname			= 		document.getElementById('fname');
	var lname		  	= 		document.getElementById('lname');
	
	
	var emaillen 		= 		email.value.length;
	var permissionlen 	= 		permission.value.length;
	var fnamelen 		= 		fname.value.length;
	var lnamelen 		= 		lname.value.length;
	
	var x				=		email.value;
	var atpos			=		x.indexOf("@");
	var dotpos			=		x.lastIndexOf(".");

	if ( emaillen == 0 || permissionlen == 0 || fnamelen == 0 || lnamelen == 0)
	{
		alert("Some fields are empty");  
		return false;
	}
	else
	{
		return true;
	}
	
	if (atpos<1 || dotpos<atpos+2 || dotpos+2>=x.length)
    {
	    alert("Not a valid e-mail address");
	    return false;
    }
}
</script>
<div class = "textfont">
	<% unless(@dataARY.nil?)%>
		<% @dataARY.each do |value| %>
			<table align = "center">
				<tr>
					<td>Account Name</td> 
					<td><input type="text" value="<%= value['accountname'] %>" disabled></td>
				</tr>
				<tr>
					<td>First Name</td> 
					<td><input type="text" value="<%= value['firstname'] %>"  name="fname" id="fname"> </td>
				</tr>
					<tr>
					<td>Last Name</td> 
					<td><input type="text" value="<%= value['lastname'] %>"  name="lname" id="lname"> </td>
				</tr>	
				<tr>
					<td>Email</td> 
					<td><input type="text" value="<%= value['email'] %>"  name="email" id="email"> </td>
				</tr>
				<tr>
					<td>Role</td> 
					<td><%= select_tag "sel_group", options_for_select(@roleArray ,@userRole) ,{:class => "downdownbox"}%> </td>
				</tr>		
				<tr>
					<td>Permission</td> 
					<td><%= select_tag "permission", options_for_select(@permissionArray ,@permission) ,{:class => "downdownbox"}%> </td>
				</tr>
				
				
				<tr>
					<td colspan="2">
						<input type="submit" name="update" value="Update" id="add" onclick ="return validateForm()">
						<input type="submit" name="cancel" value="Cancel" id="cancel" class="butsubmit">
					</td>
				</tr>
			</table>
		<% end %>	
	<% end %>	
</div>
