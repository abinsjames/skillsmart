<script>
	$(document).ready(function(){
		$("button").click(function() {
			
				var skill 			 	 = 		document.getElementById('job');
				var description		 	 = 		document.getElementById('company');
				var date			 	 = 		document.getElementById('opdate');
				var tilldate		 	 = 		document.getElementById('datepickers');


				var skilllen 		 	 = 		skill.value.length;
				var descriptionlen 	 	 = 		description.value.length;
				var datelen 	 		 = 		date.value.length;
				var tilldatelen 		 = 		tilldate.value.length;
				
				if (skilllen == 0 || descriptionlen == 0 || datelen == 0 || tilldatelen == 0)
				{
					alert("some field is empty");  
					return false;
				}
				
				else
				{
		
					  var skills 		 	 = 		skill.value;
					  var descriptions	 	 = 		description.value;
					  var dates 	 		 = 		date.value;
					  var tilldates 		 = 		tilldate.value;	
					  $.ajax({ 
							  type: 'GET', 
							  url: '/jobseeker/myWorkPopup', 
							  data: {'job' : skills, 'company':descriptions, 'from':dates, 'till':tilldates},
							  success: function(data) 
							    {
									  opener.location.reload(true);
									  self.close();
								} 
						    });				
				}
		});
	});	
</script>

