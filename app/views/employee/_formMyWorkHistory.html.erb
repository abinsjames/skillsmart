
<% unless(@cntArray.nil?)%>
	<table>
		<tr>
			<td><p><div class = "textfont"><span style="width:80px;float:left;">Click on the</span><div style="width:50px;float:left;"><%= link_to "Add", {:controller => "employee", :action => "myWorkHistoryPopup"},  :onclick=>"window.open(this.href,'myEducationPopup', 'height=450,width=530,top=250,left=600' ); return false;" %></div><span style="width:520px;float:left;"> button to add your Work history</span></div></p></td>
		</tr>
		<tr>	
			<td>
				<div STYLE="margin-left: 0%" class = "textfont">
					<table width="100%" border="0" cellpadding="5" cellspacing="0" >
						<tr bgcolor="#edf2f4">
							<td width ="200">Company</td>
							<td width ="200">Position</td>
							<td width ="200">From</td>
							<td width ="200">Until</td>
							<td width ="200">Actions</td>
						</tr>
						<% @cntArray.each do |value| %>	
							<% @counts = @counts + 1 %>
							<tr>
								<td width ="100"><%= value['company'].to_s %></td>
								<td width ="100"><%= value['title'].to_s %></td>
								<td width ="100"><%= value['fromdate'].to_s %></td>
								<td width ="100"><%= value['tilldate'].to_s %></td>
								<td><%= link_to 'Edit' , url_for({:controller => 'employee', :action => 'editWorkHistory'  , :workID => value['workid'].to_s}) ,  :onclick=>"window.open(this.href,'editWorkHistory', 'height=450,width=600,top=250,left=300' ); return false;" %> </td>	   

							</tr>
						<% end %>
					</table>
				</div>
			</td>
		</tr>
	</table>
<% end %>	
				
