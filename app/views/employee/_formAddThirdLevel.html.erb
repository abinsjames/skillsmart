<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js">
</script>
<script>
	$(document).ready(function(){
		$('#myclass').change(function() {
			$.ajax({ 
				  type: 'GET', 
				  url: '/jobseeker/getSecond', 
				  data: {'id' : $('#myclass').val()},
				  success: function(data) {
						  $('#my').empty();
						 $.each(data,function(i, v) {
						   $('#my').append( $('<option value="'+ data[i][0] +'">'+data[i][1] +'</option>'));
						 });
					} 
			  });
		});
	});	
</script>


<script>
	function validateForm()
	{

		var skill 			 	 = 		document.getElementById('skill');
		var description		 	 = 		document.getElementById('description');


		var skilllen 		 	 = 		skill.value.length;
		var descriptionlen 	 	 = 		description.value.length;
		
		if (skilllen == 0 || descriptionlen == 0)
		{
			alert("skill field is empty");  
			return false;
		}
		
		else
		{
			return true;
		}

	}
</script>
