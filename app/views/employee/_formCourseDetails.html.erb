<div class = "textfont">
	<table align = "left">	
		<% unless(@courseDetailsArray.blank?)%>
			<tr>
				<td>
					<table cellpadding="0" cellspacing="0" border="0" align ="left" width="100%">
						<tr bgcolor="#edf2f4">
							<td width ="200">Institution Name</td>
							<td width ="200">Location</td>
							<td width ="200">Website</td>
							<td width ="200">Course Title</td>
							<td width ="200">Cost</td>
							<td width ="200">Open Date</td>
							<td width ="200">Time Commitment</td>
						</tr>
							<% @courseDetailsArray.each do |value| %>
								<tr>
									<td width ="200"><%= value['InstitutionName'].to_s %></td>
									<td width ="200"><%= value['InstitutionAddress1'].to_s %></td>
									<td width ="200"><a target="_blank" href="http://<%= value['InstitutionWebsite'].to_s %>"><%= value['InstitutionWebsite'].to_s %></a></td>
									<td width ="800"><%= value['courseTitle'].to_s %></td>
									<td width ="200"><%= value['cost'].to_s %></td>
									<td width ="200"><%= value['startdate'].to_s %></td>
									<td width ="200"><%= value['timerequired'].to_s %></td>
								</tr>
							<% end %>
					</table>
				</td>
			</tr>
		<% else %>
			<tr>
				<td>
					Sorry No Details
				</td>
			</tr>			
		<% end %>	
	</table>	
</div>			
