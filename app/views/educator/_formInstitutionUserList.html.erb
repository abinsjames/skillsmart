<div>
	<table align ="center">
		<% unless(@institutionDetails.nil?)%>
			<% @institutionDetails.each do |value| %>
				<tr>
					<td>Company Name: </td><td><%= link_to value['instituteName']  , url_for({:controller => 'educator', :action => 'editInstitution' , :insID => value['instituteID'].to_s}) %> <td>
				</tr>
				<tr>
					<td>Location:</td><td> <%= value['instituteCity'] %>, <%= value['instituteState'] %> <td>
				</tr>
			<% end %>	
		 <% end %>	
		 <% unless(@educatorList.nil?)%>
			<tr>
				<td>
					<table cellpadding="0" cellspacing="0" border="0" width="100%">
						<tr>
							<td align="center" valign="middle">
								<table border = 0 cellpadding="5">
									<tr align="center" valign="middle"  bgcolor="#edf2f4">							
										<th>Name</th>	 
										<th>Email</th>
										<th>Permission</th>																			
										<th>Role</th>									
										<th>Actions</th>																		
									</tr>
									 <% @educatorList.each do |value| %>
										<tr>
											<td><%= link_to value['name']  , url_for({:controller => 'educator', :action => 'editEducator' , :prospect => value['educatorid'].to_s }) %></td>
											<td><%= value['email'].to_s %></td>
											<td><%= value['educatorPermission'].to_s %></td>
											<td><%= value['educatorRole'].to_s %></td>
											<td><%= link_to 'Edit'  , url_for({:controller => 'educator', :action => 'editEducator' , :prospect => value['educatorid'].to_s }) %> </td>	   
										</tr>
									<% end %>
									<tr>
										<td>
											<input type="submit" value="Add user" name="add" id="add" >
										</td>
									</tr>
								</table>
							</td>
						</tr>
					</table>
				</td>
			</tr>
		<% else %>
			<tr>
				<td style= "color:red"><% unless @error.blank? %><%= @error %><% else %>No Employee Found!<%end%></td>
			</tr>
			<tr>
				<td>
					<input type="submit" value="Add user" name="add" id="add" >
				</td>
			</tr>
		<% end %>		
	</table>
</div>
	
			

