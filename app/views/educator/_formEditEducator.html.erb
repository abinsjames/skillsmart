<script type="text/javascript">
function validateForm()
 {
	var name 			= 		document.getElementById('name');
	var password		= 		document.getElementById('password');
	var email			= 		document.getElementById('email');
	var permission  	= 		document.getElementById('permission');
	var fname			= 		document.getElementById('fname');
	var lname		  	= 		document.getElementById('lname');
	
	var namelen 		= 		name.value.length;
	var passwordlen 	= 		password.value.length;
	var emaillen 		= 		email.value.length;
	var permissionlen 	= 		permission.value.length;
	var fnamelen 		= 		fname.value.length;
	var lnamelen 		= 		lname.value.length;
	
	var x				=		email.value;
	var atpos			=		x.indexOf("@");
	var dotpos			=		x.lastIndexOf(".");

	if (namelen == 0 ||  emaillen == 0 || permissionlen == 0 || passwordlen == 0 || fnamelen == 0 || lnamelen == 0)
	{
		alert("Some fields are empty");  
		return false;
	}
	else
	{
		return true;
	}
	
	if (atpos<1 || dotpos<atpos+2 || dotpos+2>=x.length)
    {
	    alert("Not a valid e-mail address");
	    return false;
    }
}
</script>
